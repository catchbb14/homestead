<form class="sidebar-form form">
    <div class="form-group">
        <label for="what" class="col-form-label">What?</label>
        <input name="keyword" type="text" class="form-control" id="title" placeholder="What are we calling it?" required>
    </div>
    <!--end form-group-->
    <div class="form-group">
        <label for="input-location" class="col-form-label">Where?</label>
        <input name="location" type="text" class="form-control" id="input-location" placeholder="Enter Location" required>
        <span class="geo-location input-group-addon"><i class="fa fa-map-marker"></i></span>
    </div>
    <div class="form-group">
        <label for="startDate" class="col-form-label">When?</label>
        <input name="date" type="text" class="form-control date" placeholder="Start" id="startDate" required readonly="readonly">
        <input name="date" type="text" class="form-control date d-none" style="margin-top:10px" placeholder="End" id="endDate" required readonly="readonly">
    </div>
    <div class="">
      <div class="form-group">
          <label class="">
              <div class="float-left"><input type="checkbox" name="type" value="1" required="" style="position: absolute; opacity: 0;"></div>
              <div style="margin-right: 10px;">All day event?</div>
          </label>
      </div>
      <!--end form-group-->
    </div>
    <!--end form-group-->
    <div class="form-group clearfix">
        <label for="category" class="col-form-label">Category?</label>
        <select name="category" id="category" data-placeholder="Select Category" required>
            <option value="">Select Category</option>
            <option value="Class">Class</option>
            <option value="Community">Community</option>
            <option value="Fitness">Fitness</option>
            <option value="Sell">Sell</option>
            <option value="Social">Social</option>
            <option value="Sports">Sports</option>
            <option value="Other">Other</option>
        </select>
    </div>
    <!--end form-group-->
    <button type="submit" class="btn btn-primary large icon float-right" id="post-event" data-id={{userId}} data-userName={{userName}}>Post<i class="fa fa-chevron-right"></i></button>
</form>
